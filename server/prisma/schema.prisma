datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

model Conlang {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String

  prefix    String @default("-")
  suffix    String @default("-")
  separator String @default(" ... ")

  hints Hint[]
}

model Hint {
  id          Int     @id @default(autoincrement())
  key         String
  hints       String // Hints are separated by newline
  fromConlang Boolean

  conlang   Conlang @relation(fields: [conlangId], references: [id])
  conlangId Int

  Section Section[]

  @@unique([conlangId, fromConlang, key])
}

model Section {
  start  Int
  end    Int
  prefix Boolean
  suffix Boolean

  hint      Hint @relation(fields: [hintId], references: [id])
  hintId    Int
  areaStart Int

  @@id([hintId, areaStart, start])
  @@index([hintId])
}
